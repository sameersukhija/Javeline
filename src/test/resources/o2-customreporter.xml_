<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite
  SYSTEM 'http://testng.org/testng-1.0.dtd'>
<suite name="O2 Custom Reporter Suite" parallel="false" verbose="1">
  <!-- 
    Browser to be used 
  -->
  <parameter name="browser" value="firefox"/>
  <!-- 
    Start path where locate configuration files 
  -->
  <parameter name="resourceStartPath" value="input"/>
  <parameter name="loadingType" value="RESOURCE"/>
  <!-- 
    In default configuration environment
  -->
  <parameter name="environment" value="e4o_qa2_ne"/>
  <parameter name="gui_server" value="actrule"/>
  <parameter name="tenant" value="tenant"/>
  <parameter name="user" value="superman"/>
  <!-- 
    Parameters Section 
  -->
  <parameter name="tokens2BeGenerated" value="5"/>
  <parameter name="msisdn" value="393492135261"/>
  <parameter name="offerIds" value="1003"/>

  <!-- 
    Test Section 
  -->
  <test name="Summary Tokens before test">
    <classes>
      <class name="com.lumata.e4o.gui.common.O2ReporterFiller">
        <methods>
          <include name="getTokensList"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Core XMLRPC - Generate Tokens">
    <classes>
      <class name="com.lumata.e4o.gui.common.O2ReporterFiller">
        <methods>
          <include name="generateTokens"/>
        </methods>
      </class>
    </classes>
  </test>        
  <test name="Core XMLRPC - Allocate Tokens">
    <classes>
      <class name="com.lumata.e4o.gui.common.O2ReporterFiller">
        <methods>    
          <include name="getTokensList"/>
          <include name="allocateToken"/>
        </methods>
      </class>
    </classes>
  </test>          
  <test name="Core XMLRPC - Accept Tokens">
    <classes>
      <class name="com.lumata.e4o.gui.common.O2ReporterFiller">
        <methods>      
          <include name="getTokensList"/>
          <include name="acceptToken"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Summary Tokens after test">
    <classes>
      <class name="com.lumata.e4o.gui.common.O2ReporterFiller">
        <methods>
          <include name="getTokensList"/>
        </methods>
      </class>
    </classes>
  </test>
</suite>