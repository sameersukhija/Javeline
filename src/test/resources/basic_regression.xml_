<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Basic Regression Suite" verbose="1" parallel="false" time-out="40000">

  <!-- 
    Browser to be used 
  -->
  <parameter name="browser" value="firefox"/>
<!--   
  <parameter name="seleniumGrid"      value="http://selenium.grid:5555/wd/hub"/>  
  <parameter name="locTempFolder"     value="/home/vincenzo/Documents/shared/"/>
  <parameter name="remTempFolder"     value="Z:\\"/>
-->

  <!-- 
    Start path where locate configuration files 
  -->
  <parameter name="resourceStartPath"   value="input"/>
  <parameter name="loadingType"         value="RESOURCE"/>

  <!-- 
    ##### 
    ##### 
    ##### Configuration environment file and its main correlated parameters
    ##### 
    ##### 
  -->
  <!-- <parameter name="environment"         value="e4o_vm_report_ne"/> -->
  <parameter name="environment"         value="e4o_qa_ne"/>
  <parameter name="gui_server"          value="actrule"/>
  <parameter name="tenant"              value="qa"/>
  <!-- <parameter name="tenant"              value="tenantMaster"/> -->
  <parameter name="user"                value="superman"/>

  <!-- 
    ##### 
    ##### 
    ##### Commodities, Complements, Notifications, ... configuration files
    ##### This section collects the specific configuration files for test execution.
    ##### 
    ##### BEWARE : Scenario execution can fail when one of this file is missing!
    #####          In case of doubt "comment" the tag and execute default configuration
    ##### 
  -->
  <parameter name="salesChannelsList"   value="salesChannelsEFOGC2109"/>
  <parameter name="commoditiesFile"     value="commoditiesTemplate"/>
  <parameter name="complementsFile"     value="complementsTemplate"/>
  <parameter name="notificationsFile"   value="notificationsEFOGC2667"/>
  <parameter name="productTypesFile"    value="productTypesTemplate"/>
  <parameter name="loyaltyCreationFile" value="loyaltyCreationTemplate"/>
  <parameter name="offersFile"          value="offersVoucher2753"/>
  <parameter name="tokenTypeList"       value="tokenTypes2667"/>
  <parameter name="ruleListFile"        value="rulesetEFOGC2667"/>
  <parameter name="campaignModelList"   value="campaignModelEFOGC2667"/>

  <!-- 
    ##### 
    ##### Seed used into msisdn auto-generation, the final msisdn contains in append three random digit.
    ##### 
  -->
  <parameter name="inputSeed"           value="393492135"/>

  <!-- 
    ##### 
    ##### This list contains the subscriber preferences to be assigned to "hobbies".
    ##### 
  -->
  <parameter name="hobbiesList" value="Read;Paint;Play;Drive"/>

  <!--  
    After test the configuration is removed ( where applicable )
  -->
  <parameter name="cleanup" value="FALSE"/>

  <!-- 
    >>>>>>> 
    >>>>>>> Test Section 
    >>>>>>> 
  -->
  <test name="Basic regression suite for E4O">

    <classes>

      <class name="com.lumata.e4o.schema.configuration.TestDMNotificationEnabled">
        <methods>
          <include name="configureDMNotifications"/>
        </methods>
      </class>

      <class name="com.lumata.e4o.gui.administrationmanager.ConfigureNotifications">
        <methods>
          <include name="configureNotificationsTest"/>
          <include name="cleanupNotificationsForm"/>
        </methods>
      </class>

      <class name="com.lumata.e4o.gui.administrationmanager.ConfigureCommodities">
        <methods>
          <include name="configureCommoditiesTest"/>
          <include name="cleanupCommoditiesForm"/>
        </methods>
      </class>

      <class name="com.lumata.e4o.gui.administrationmanager.ConfigureComplements">
        <methods>
          <include name="configureComplementsTest"/>
        </methods>
      </class>

      <class name="com.lumata.e4o.gui.loyaltymanager.ConfigureLoyalty">
        <methods>
          <include name="configureLoyaltyCreation"/>
        </methods>
      </class>

      <class name="com.lumata.e4o.gui.catalogmanager.ConfigureProductTypes">
        <methods>
          <include name="configureProductTypesTest"/>
          <include name="cleanupProductTypesForm"/>
        </methods>
      </class>
      
      <class name="com.lumata.e4o.gui.common.RegressionSuiteAppender">
         <methods>
          <!--<include name="configureCampaignModel"/> -->
        </methods>
      </class>

      <class name="com.lumata.e4o.gui.catalogmanager.ConfigureOffers">
        <methods>
          <include name="configureOffers"/>
        </methods>
      </class>

      <class name="com.lumata.e4o.gui.common.RegressionSuiteUtils">
        <methods>
          <include name="generateHobbies"/>
        </methods>
      </class>

       <class name="com.lumata.e4o.gui.common.RegressionSuiteXMLRPC">
        <methods>
            <include name="createNewSubscriberWithOptionalParams"/>
            <include name="createNewSubscriberWithWrongMinimalParameters"/>
        </methods>
      </class>

    </classes>

  </test>
</suite>
